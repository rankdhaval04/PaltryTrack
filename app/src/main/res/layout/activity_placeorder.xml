<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".placeorder">

    <ScrollView
        android:layout_width="368dp"
        android:layout_height="551dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="0dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="780dp">

                <View
                    android:id="@+id/view2"
                    android:layout_width="330dp"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="320dp"
                    android:background="@android:color/darker_gray" />

                <ImageView
                    android:id="@+id/iv2"
                    android:layout_width="230dp"
                    android:layout_height="220dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    app:srcCompat="@drawable/cart"
                    tools:layout_editor_absoluteX="110dp"
                    tools:layout_editor_absoluteY="32dp" />

                <View
                    android:layout_width="326dp"
                    android:layout_height="1dp"
                    android:layout_centerInParent="true"
                    android:background="@android:color/darker_gray" />

                <View
                    android:id="@+id/view"
                    android:layout_width="326dp"
                    android:layout_height="1dp"
                    android:layout_below="@+id/iv2"
                    android:layout_centerHorizontal="true"
                    android:background="@android:color/darker_gray" />

                <Button
                    android:id="@+id/off"
                    android:layout_width="63dp"
                    android:layout_height="28dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignTop="@+id/price"
                    android:layout_marginStart="84dp"
                    android:background="@android:color/holo_green_dark"
                    android:text="24% OFF"
                    android:textColor="@android:color/background_light"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/fghjk"
                    android:layout_width="325dp"
                    android:layout_height="72dp"
                    android:layout_below="@+id/view"
                    android:layout_centerHorizontal="true"
                    android:text="Paltry Track"
                    android:textColor="@android:color/background_dark"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignStart="@+id/view"
                    android:layout_marginTop="301dp"
                    android:text="$50"
                    android:textColor="@android:color/background_dark"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/buy"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignStart="@+id/fghjk"
                    android:layout_marginTop="339dp"
                    android:background="#e67009"
                    android:text="ADD"
                    android:textColor="@android:color/background_light" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignStart="@+id/view2"
                    android:layout_marginBottom="354dp"
                    android:text="Unit"
                    android:textColor="@android:color/background_dark"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/unit"
                    android:layout_width="79dp"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/textView3"
                    android:layout_below="@+id/textView3"
                    android:layout_marginTop="-354dp"
                    android:text="1 KG"
                    android:textColor="@android:color/holo_orange_dark"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/fghjk"
                    android:layout_alignTop="@+id/view2"
                    android:text="Description"
                    android:textColor="@android:color/background_dark"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/description"
                    android:layout_width="317dp"
                    android:layout_height="242dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="47dp"
                    android:text="Paltry track is an online grocery shopping site. This app provides many features including area-wise stores and products.  " />

                <Button
                    android:id="@+id/minus"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignTop="@+id/buy"
                    android:layout_marginEnd="156dp"
                    android:background="#e67009"
                    android:text="-"
                    android:textColor="@android:color/background_light" />

                <TextView
                    android:id="@+id/quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignTop="@+id/buy"
                    android:layout_marginEnd="124dp"
                    android:text="1"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/plus"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_alignEnd="@+id/iv2"
                    android:layout_alignTop="@+id/buy"
                    android:background="#e67009"
                    android:text="+" />

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>